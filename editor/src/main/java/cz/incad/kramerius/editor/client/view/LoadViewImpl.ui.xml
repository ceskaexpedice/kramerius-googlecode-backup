<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .cells {
            margin: 2px 2px;
        }
        .errorLabel {
            color: red;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.cells}">Enter PID: </div>
        <div><g:TextBox ui:field="textBox" addStyleNames="{style.cells}"></g:TextBox></div>
        <div><g:Label ui:field="errorLabel" addStyleNames="{style.cells} {style.errorLabel}"></g:Label></div>
        <g:Button ui:field='okButton' addStyleNames="{style.cells}">OK</g:Button>
        <g:Button ui:field='demoButton1' addStyleNames="{style.cells}">Demo Drobn≈Østky</g:Button>
        <g:Button ui:field='demoButton2' addStyleNames="{style.cells}">Demo Kniha Zlata</g:Button>
        <g:Button ui:field='cancelButton' addStyleNames="{style.cells}">Cancel</g:Button>
    </g:HTMLPanel>
</ui:UiBinder>