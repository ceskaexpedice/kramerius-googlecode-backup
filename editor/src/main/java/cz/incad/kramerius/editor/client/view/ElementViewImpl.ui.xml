<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style src="ElementView.css" />

    <g:VerticalPanel addStyleNames="{style.elementPanel}">
        <g:SimplePanel addStyleNames="{style.thumbnail}">
            <g:Image ui:field="elmImage" />
        </g:SimplePanel>
        <g:HorizontalPanel>
            <g:Label ui:field="elmLabel" />
            <g:Anchor ui:field="elmPreview" addStyleNames="ui-icon ui-icon-zoomin" title="Preview" href="javascript:;" />
            <g:Anchor ui:field="elmOpen" addStyleNames="ui-icon ui-icon-newwin" title="Open in new tab" href="javascript:;" />
        </g:HorizontalPanel>
    </g:VerticalPanel>
</ui:UiBinder>