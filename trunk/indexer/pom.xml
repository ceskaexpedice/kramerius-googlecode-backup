  </dependency>
  
  <dependency>
  <groupId>lucene-queries</groupId>
  <artifactId>lucene-queries</artifactId>
  <version>2.9.1</version>
  </dependency>

  <dependency>
   <groupId>lucene-demos</groupId>
  <artifactId>lucene-demos</artifactId>
