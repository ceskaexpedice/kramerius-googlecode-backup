<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<servlet>
		<servlet-name>GetRelsExt</servlet-name>
		<servlet-class>cz.incad.Kramerius.GetRelsExt</servlet-class>
	</servlet>

	<!-- Servlets -->
	<servlet>
		<servlet-name>pageService</servlet-name>
		<servlet-class>cz.i.kramerius.gwtviewers.server.PageServiceImpl</servlet-class>
		<init-param>
			<!--  bude tahano z fedory, vlastnosti asi pres JNDI -->
			<param-name>thumbUrl</param-name>
			<param-value>thumb</param-value>
		</init-param>

		<init-param>
			<param-name>maxWidth</param-name>
			<param-value>95</param-value>
		</init-param>
	</servlet>


	<servlet>
		<servlet-name>djvuServlet</servlet-name>
		<servlet-class>cz.incad.Kramerius.DJVUServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>InitServlet</servlet-name>
		<servlet-class>cz.incad.utils.InitServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>GetPageInfo</servlet-name>
		<servlet-class>cz.incad.Kramerius.GetPageInfo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetUnitInfo</servlet-name>
		<servlet-class>cz.incad.Kramerius.GetUnitInfo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetTotalPages</servlet-name>
		<servlet-class>cz.incad.Kramerius.GetTotalPages</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>IndexModel</servlet-name>
		<servlet-class>cz.incad.Kramerius.IndexModel</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>thumb</servlet-name>
		<servlet-class>cz.incad.Kramerius.ThumbnailServlet</servlet-class>
		<!--  
			load-on-startup>1</load-on-startup
		-->
	</servlet>

	<servlet-mapping>
		<servlet-name>pageService</servlet-name>
		<url-pattern>/gwtviewers/page</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetRelsExt</servlet-name>
		<url-pattern>/GetRelsExt</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetPageInfo</servlet-name>
		<url-pattern>/GetPageInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetUnitInfo</servlet-name>
		<url-pattern>/GetUnitInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetTotalPages</servlet-name>
		<url-pattern>/GetTotalPages</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IndexModel</servlet-name>
		<url-pattern>/IndexModel</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>thumb</servlet-name>
		<url-pattern>/thumb</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>InitServlet</servlet-name>
		<url-pattern>/InitServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>djvuServlet</servlet-name>
		<url-pattern>/djvu</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>search.jsp</welcome-file>
	</welcome-file-list>
</web-app>
