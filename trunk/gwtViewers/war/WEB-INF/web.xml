<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>pageService</servlet-name>
    <servlet-class>cz.i.kramerius.gwtviewers.server.PageServiceImpl</servlet-class>
    <init-param>
    	<!--  bude tahano z fedory, vlastnosti asi pres JNDI -->
		<param-name>thumbUrl</param-name>
		<param-value>http://192.168.56.1:8080/search/thumb</param-value>
    </init-param>
    <init-param>
    	<param-name>maxWidth</param-name>
		<param-value>180</param-value>
    </init-param>
    <init-param>
    	<param-name>scaledHeight</param-name>
		<param-value>220</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>pageService</servlet-name>
    <url-pattern>/gwtviewers/page</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GwtViewers.html</welcome-file>
  </welcome-file-list>

</web-app>
